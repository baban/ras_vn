<h1><%= @profile.nickname %>のキッチン</h1>

<table>
  <tr>
    <td>ユーザーID</td>
    <td><%= @profile.id %></td>
  </tr>
  <% if @visibility.mail_address %>
    <tr>
      <td>ニックネーム</td>
      <td><%= @profile.nickname %></td>
    </tr>
  <% end %>
  <% if @visibility.mail_address %>
    <tr>
      <td>メールアドレス</td>
      <td><%= @profile.mail_address %></td>
    </tr>
  <% end %>
  <% if @visibility.sex %>
    <tr>
      <td>性別</td>
      <td><%=translate_sex( @profile.sex ) %></td>
    </tr>
  <% end %>
  <% if @visibility.birthday %>
    <tr>
      <td>生年月日</td>
      <td><%= @profile.birthday %></td>
    </tr>
  <% end %>
</table>

<h2>最新レシピ</h2>
<ul>
  <% @recipes.each do |recipe| %>
    <li>
      <dl>
        <dt><%=link_to recipe.title, recipes_url(recipe) %></dt>
        <dd>
          <p><%= truncate(recipe.description) %></p>
          <ul>
            <% recipe.foodstuffs.each do |food| %>
              <li><%= food.name %></li>
            <% end %>
          </ul>
          <ul>
            <li>作成:<%= recipe.created_at.strftime("%Y/%m/%d") %></li>
            <li>公開:<%= recipe.updated_at.strftime("%Y/%m/%d") %></li>
            <li>レシピID:<%= recipe.id %></li>
          </ul>
        </dd>
      </dl>
    </li>
  <% end %>
</ul>
