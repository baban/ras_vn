<header>
<div class="inner clearfix txt12">
<h1><%= link_to (image_tag "/assets/ck24logo.png", alt:"cook24", width:"77", height:"16"), root_url %></h1>

<p class="mk">mark</p>

<nav>
<ul class="clearfix flo_l">
<li class=""><a href="#">Tìm Kiếm Nhà Hàng</a></li>
</ul>
<ul class="clearfix flo_r">
<li><a href="#">Đăng Nhập</a></li>
</ul>
</nav>

<div class="search flo_l">
	<%= form_for( :recipes, url: recipes_url, html:{ class:"cl" }, method:"GET" ) do |f| %>
	<div class="box radi5">
    <%= text_field_tag :word, "",class:"radi5", type:"search" %>
    <%= f.button t(:blank, scope:"views.header"), class:"radi3", title:"Tìm Kiếm"%>
    <span class="hidden_elem">Tìm Kiếm</span>
    </div>
	<% end %>
</div>
<ul class="flo_l s_att clearfix">
<li class="arr"><a href="#">Tìm Công Thức</a></li>
</ul>

<div class="rbtn"><a href="#" class="radi10">Đăng Công Thức</a></div>
</div>
</header>



