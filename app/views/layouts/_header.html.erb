<div id="header">
  <div class="logo">
    ロゴ
  </div>
  <%= form_for :search, url:{ action:"index" }, html:{ class:"header_search" } do |f| %>
    <%= text_field_tag :word, "" %>
    <%= f.submit "検索" %>
  <% end %>
  <dl id="login_area">
    <dt>Login</dt>
    <dd>
      <%= form_for(:login, :url => "") do |f| %>
        <div><%= f.label :email %><br />
        <%= f.email_field :email %></div>
        <div><%= f.label :password %><br />
        <%= f.password_field :password %></div>
        <div><%= f.submit "Sign in" %></div>
      <% end %>
    </dd>
  </div>
</div>
