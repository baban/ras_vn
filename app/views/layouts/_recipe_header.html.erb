<div id="header">
  <div class="logo">
    <%= link_to "ロゴ", root_url %>
  </div>
  <%= form_for :search, url:{ action:'index' }, html:{ class:'header_search' } do |f| %>
    <%= text_field_tag :word, "" %>
    <%= f.submit "検索" %>
  <% end %>

  <% unless user_signed_in? %>
    <dl id="login_area">
      <dt>
        <%= form_for :user, url: new_user_registration_url, method:"GET" do |f| %>
          <p><%=f.submit "Sign up" %></p>
        <% end %>
      </dt>
      <dt>
        <%= form_for :user, url: new_user_session_url, method:"GET" do |f| %>
          <div><%= f.submit "Sign in" %></div>
        <% end %>
      </dt>
    </dl>
  <% else %>
    <dl id="login_area">
      <dt>
        <%=form_for :device, url: destroy_user_session_url, method:"DELETE" do |f| %>
          <p><%=f.submit "Logout" %></p>
        <% end %>
      </dt>
      <dt>
        <ul id="mymenues_bar">
          <li><%= link_to "mypage", controller:"mypage", action:"index" %></li>
          <li><%= link_to "bookmarks", controller:"bookmarks", action:"index" %></li>
        </ul>
      </dt>
    </dl>
  <% end %>
</div>
