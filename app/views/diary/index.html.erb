<h2>日記</h2>

<div id="conent_body" class="section">
  <% if my_diary? %>
    <div id="diary_create_link">
      <%= link_to "write diary", action:"new" %>
    </div>
  <% end %>
  <div id="articles" class="section">
    <% @diary.each do |d| %>
      <div class="article">
        <h3><%= link_to d.title, action:"show", id: d.id %></h3>
        <div><%= d.content %></div>
      </div>
    <% end %>
  </div>
</div>
