<%
  page_title = @resource.model_name.human
  title(page_title)
%>

<% content_for :main_grid do %>

  <h2>
    <%= page_title %>
  </h2>

  <%= display_flash_message %>

  <table class="data">
    <% @items.each do |row| %>
      <tr>
        <% row.each do |col| %>
          <td><%= col %></td>
        <% end %>
      </tr>
    <% end %>
  </table>

<% end %>

<div class="grid_2">
  <%= build_sidebar %>
</div>

<div class="grid_10">
  <%= yield :main_grid %>
</div>
