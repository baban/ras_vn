=render partial:'header'

#content
  %h2 ぐるなびレストラン検索
  #area_area
    %h3 エリアから探す
    #are_list_area
      %dl
        - AreaMaster.where( " data_type = 1 " ).each do |area|
          %dt= area.name
          %dd
            %ul
              - AreaMaster.where( " parent_id = ? ", area.id ).each do |sub_area|
                %li=link_to sub_area.name, controller:'search', action:'index', sub_area: sub_area.id
  #food_genre_area
    %h3 料理から探す
    #food_genre_area
      %ul.food_genre_list
        - FoodGenreMaster.all.each do |genre|
          %li=link_to genre.name, controller:'search', action:'index', sub_area: genre.id
  #shop_character_area
    %h3 こだわりから探す
    #shop_character__area
      %ul.shop_character_list
        - ShopCharacterMaster.all.each do |chara|
          %li=link_to chara.name, controller:'search', action:'index', sub_area: chara.id

=render partial:'common/footer'
