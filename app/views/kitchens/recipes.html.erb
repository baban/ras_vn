<h2><%= @profile.nickname %>のキッチン</h2>

<%= render partial:"content_header" %> 

<h2>レシピ</h2>
<%= paginate @recipes %>
<ul class="recipes">
  <% @recipes.each do |recipe| %>
    <li class="recipe">
      <dl class="recipe">
        <dt><%=link_to recipe.title, recipes_url(recipe) %></dt>
        <dd>
          <p><%= truncate(recipe.description) %></p>
          <h3 class="foodstuffs_title">材料</h3>
          <ul class="foodstuffs">
            <% recipe.foodstuffs.each do |food| %>
              <li><%= food.name %></li>
            <% end %>
          </ul>
          <ul class="recipe_status">
            <li>作成:<%= recipe.created_at.strftime("%Y/%m/%d") %></li>
            <li>公開:<%= recipe.updated_at.strftime("%Y/%m/%d") %></li>
            <li>レシピID:<%= recipe.id %></li>
          </ul>
        </dd>
      </dl>
    </li>
  <% end %>
</ul>
