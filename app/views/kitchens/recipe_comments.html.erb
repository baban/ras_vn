<div id="content_body" class="section bace_bg">
	<%= render partial:"content_header" %> 
	<div id="mypage_content" class="clearfix mypage_content main_clm">
		<h2 class="txt20">Đăng report</h2>
		<div class="paginate"><%= paginate @recipe_comments %></div>
		<div id="recipes">
			<% @recipe_comments.each do |comment| %>
				<div class="cate01 clearfix">
					<section class="rec_cat5 clearfix">
						<% if comment.image.present? %><%= image_tag comment.image.url, size:"280x466", alt:"" %><% end %>
						<div class="txt">
							<h1 class="txt16"><%= link_to comment.title, controller:"recipes", action:"show", id: comment.recipe_id %></h1>
							<p>by&nbsp;<%= link_to comment.chef.nickname, kitchen_url(comment.chef) %></p>
							<%= comment.content %>
							<div class="info_area">
								<%= t(:created_at, scope:"activerecord.attributes.recipe") %>：<span><%= comment.created_at.strftime("%Y/%m/%d") %>&nbsp;&nbsp;</span>
								<%= t(:updated_at, scope:"activerecord.attributes.recipe") %>：<span><%= comment.updated_at.strftime("%Y/%m/%d") %>&nbsp;&nbsp;</span>
							</div>
						</div>
					</section>
				</div>
			<% end %>
		</div>
	</div>
	<%=render partial:"layouts/right_side_content" %>
</div>


