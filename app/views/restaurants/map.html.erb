<% content_for(:style_after){ stylesheet_link_tag("restaurants/map") } %>

<%=render partial:"header" %>

<div class="section" id="content">
  <%=render partial:"content_header" %>

  <div id='shop_content'>
    <%=render partial:"content_top_menu" %>

    <div id="restaurant_content_body">
      <div id="restaurant_map">
        <div class="figure">
          <iframe 
            width="400" height="400" 
            frameborder="0" scrolling="no" marginheight="0" marginwidth="0" 
            src="https://maps.google.co.jp/maps?z=16&amp;q=a&amp;hq=&amp;hnear=<%= URI.encode('東京都渋谷区宇田川町24-4') %>&amp;output=embed">
          </iframe>
          <br />
        </div>
        <div id="access_list">
          <h3>最寄り駅</h3>
          <ul>
            <li>渋谷(埼京線)</li>
            <li>渋谷(埼京線)</li>
            <li>渋谷(埼京線)</li>
            <li>渋谷(埼京線)</li>
          </ul>
        </div>
      </div>
      <div id="basic_info">
        <h2><%= @restaurant.name %>基本情報</h2>
        <table id="restaurant_info">
          <tr>
            <th>店名</th>
            <td><%= @restaurant.name %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @restaurant.address %></td>
          </tr>
          <tr>
            <th>アクセス</th>
            <td></td>
          </tr>
          <tr>
            <th>TEL</th>
            <td>
              <p><%= @restaurant.phone_number %></p>
              <p>※お問い合わせの際はぐるなびを見たとお伝えになるとスムーズです。</p>
            </td>
          </tr>
          <tr>
            <th>FAX</th>
            <td><%= @restaurant.fax_number %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <%=render partial:"content_footer" %>
  <%=render partial:"content_bottom_menu" %>
</div>

<%=render partial:"footer" %>
