

<div id="content_body" class="section">
  <h2>recipe</h2>
  <%=semantic_form_for @recipe do |f| %>
    <p><%= f.label :title, "Title:" %></p>
    <p><%= f.text_field :title, value: @recipe.title %></p>
    <p><%= f.label :description, "Description:" %></p>
    <p><%= f.text_area :description, value: @recipe.description %></p>
    <p><%= f.label :image, "Image:" %></p>
    <p><%= f.file_field :image, value: ''  %></p>
    <p><%= f.select :public, { public: true, closed: false } %></p>
    <p><%=link_to "投稿に関する注意事項", "" %></p>
    <p><%= f.submit "Next Step" %></p>
  <% end %>
</div>
