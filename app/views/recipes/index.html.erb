<div id="content_footer">
  footer
</div>

<div id="content_body">
  <div class="paginate">
    <%=paginate @recipes %>
  </div>
  <% @recipes.each do |recipe| %>
    <div class="recipe">
      <div class="figure recipe_photo">
        <%=image_tag recipe.recipe_image.url(:thumb), alt:"image" %>
      </div>
      <%= link_to recipe.title, action:'show', id: recipe.id %>
      <p><%= recipe.description %></p>
    </div>
  <% end %>
</div>
