<div class="bace_bg">
	<div class="contents_bg clearfix">
		<!--main_clm-->
		<div class="main_clm">
			<aside>
				<div class="side_contents_l">
					<ul class="footstamps">
						<li>
							<a href="/category/list" class="back_to_category_list">«カテゴリ一覧</a>
						</li>
						<li class="indent_level_1">
							<%= @food_genre.name %>
						</li>
						<ul class="sub_categories">
							<% @food_genre.foods.each do |food| %>
								<li class="txt_cate">
									<%= link_to food.name, recipe_foods_url(recipe_food_id: food.id) %>
									<%= image_tag "arr01.png", width:"14", height:"14", alt:"Ẩm Thực Việt"%>
								</li>
							<% end %>
						</ul>
					</ul>
				</div>
			</aside>
			<div class="contents_cate">
				<h1 class="ttl_cate flo_l">野菜のおかず</h1>
				<p class="txt_sum txt_sum02">
					計：<span class="count"><%= @food_genre.amount %></span>件
				</p>
				<article class="rec_cat rec_cat3 clearfix">
					<%= image_tag "/assets/common/sp01.jpg", width:"120", height:"170", alt:"Ẩm Thực Việt"%>
					<div class="txt">
						<h1 class="txt16"><a href="#">豚しゃぶ用のお肉で肉巻きおにぎり</a></h1>
						<h2>♡2011.4.22 つくれぽ100人ありがとう～♪ 最近人気の肉巻きおにぎりは作った方が買うより断然お安いです♪
						<p>
							by<a href="#">sssssssma</a>
						</p></h2>
					</div>
				</article>
				<article class="cate01 clearfix">
					<div class="clearfix">
						<div class="order_switch">
							<span> 新着順 </span><span class="order_price"> | 
								<%= image_tag "/assets/common/ico_crown.png", class:"ico_crown", alt:"Ẩm Thực Việt"%>
							</span><span><a class="#" href="#">人気順</a> </span>
						</div>
						<div class="mini_paginate">
							<span class="page_num"> 1 / 450ページ </span><a rel="next" href="#">次»</a>
							<%= paginate @recipes %>
						</div>
						<div id="category_recipes"></div>
					</div>
					<% @recipes.each do |recipe| %>
						<section class="rec_cat4 clearfix">
							<%= image_tag recipe.image.url(:thumb), width:"100", height:"141", alt:"" %>
							<div class="txt">
								<h1 class="txt16"><%= link_to recipe.title, controller:"recipes", action:"show", id: recipe.id %></h1>
								<p>by <%= link_to recipe.user.profile.nickname %></p>
								<h2>
									<%= recipe.description %>
									<div class="info_area">
										公開：<span><%= recipe.created_at.strftime("%Y/%m/%d") %></span>&nbsp;&nbsp;
										更新：<span><%= recipe.updated_at.strftime("%Y/%m/%d") %></span>&nbsp;&nbsp;
										レシピID：<span><%= recipe.id %></span>
									</div>
								</h2>
							</div>
						</section>
					<% end %>
				</article>
				<!--pagination-->
				<div class="paginate">
					<%= paginate @recipes %>
				</div>
				<!--pagination-->
			</div>
		</div>
		<!--main_clmEnd-->
		<%=render partial:"layouts/right_side_content" %>
	</div>
	<!--contents-->
</div>
