
<div id="content">
  <h2><%= t( :bookmark, scope:"activerecord.models" ) %></h2>
  <div id="content_body">
    <div class="paginate">
      <%= paginate @recipes %>
    </div>
    <div id="recipes">
      <% @recipes.each do |recipe| %>
        <div class="recipe">
          <div class="figure recipe_photo">
            <%= image_tag recipe.recipe_image.url(:thumb), alt:"image" %>
          </div>
          <%= link_to recipe.title, recipe_url(recipe) %>
          <p class="description"><%= truncate(recipe.description) %></p>
          <p class="chef">by <%= recipe.chef.profile.nickname %></p>
          <ul class="recipe_status">
            <li><%= t(:id, scope:"activerecord.attributes.recipe") %>:<%= recipe.id %></li>
            <li><%= t(:created_at, scope:"activerecord.attributes.recipe") %>:<%= recipe.created_at.strftime("%Y-%m-%d") %></li>
            <li><%= t(:updated_at, scope:"activerecord.attributes.recipe") %>:<%= recipe.updated_at.strftime("%Y-%m-%d") %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class='nav' id='nav'></div>
</div>
